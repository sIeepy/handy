!!!
%html
  %head
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }
    %title= content_for?(:title) ? yield(:title) : 'HandyMan'
    %meta{ name: "description", content: "#{content_for?(:description) ? yield(:description) : 'Props'}" }
    %script{ src: "//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js" }
    %script{ src: "https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js" }
    %script{ src: "//maps.google.com/maps/api/js?key=AIzaSyCws8jm9jzyq6bHnyt0pSVUO3zKsyPFDwM"}
    %script{ src: "//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"}
    %script{ src: "//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js", type: "text/javascript"}
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags

    %body
      #announcements-region
      %header
        #header-region
          = render 'layouts/navigation'
      %main
        .container
          #main-region
          = render 'layouts/message'
          = yield
